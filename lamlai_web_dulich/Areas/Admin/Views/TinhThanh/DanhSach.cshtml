@model IEnumerable<lamlai_web_dulich.Models.TinhThanh>

@{
    ViewBag.Title = "DanhSach";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
}


<div class="row">
    <div class="col-md-12" style="padding-top:50px">
        <h2 style="color:blue;
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite; padding: 15px 20px ">
                DANH SÁCH TỈNH
        </h2>

        <p>
            <button type="button" class="btn btn-info">

                <a href="~/Admin/TinhThanh/ThemMoi" style="color:aqua">Thêm Mới</a>
            </button>
            
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID_Tinh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ten)
                </th>
                <th>TOOL</th>
                <th>TOOL</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_Tinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ten)
                    </td>
                    <td>
                        <a href="~/Admin/TinhThanh/CapNhat?idTinh=@item.ID_Tinh"><i class="fa fa-check" aria-hidden="true"></i></a>
                    </td>
                    <td>
                        <a href="#" style="color:red" onclick="if (confirm('Co muon Xoa khong') == true) { location.href = '/Admin/TinhThanh/Xoa?idTinh=@item.ID_Tinh' }"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


