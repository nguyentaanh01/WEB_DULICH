@model IEnumerable<lamlai_web_dulich.Models.CamNangDuLich>

@{
    ViewBag.Title = "DanhSach";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
}

<div class="row">
    <div class="col-md-12" style="padding-top:50px">
        <h2 style="color:blue;
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite; padding: 15px 20px ">
            DANH SÁCH CẨM NANG
        </h2>

        <p>
            <button type="button" class="btn btn-info">
                <a href="~/Admin/CamNangDuLich/ThemMoi">Thêm Mới</a>
            </button>

        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TieuDe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TomTat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayViet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HienTrangChu)
                </th>
                <th>TOOL</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TieuDe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TomTat)
                    </td>
                    <td>
                        <img style="height:100px; width:100px" src="@item.HinhAnh" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td>
                        @string.Format("{0:dd/MM/yyyy}", item.NgayViet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HienTrangChu)
                    </td>
                    <td>
                        <a href="~/Admin/CamNangDuLich/CapNhat?idCamNang=@item.ID">Update</a>|
                        <a href="#" style="color:red" onclick="if (confirm('ban co muon xoa khong') == true) { location.href = '/Admin/CamNangDuLich/Xoa?idCamNang=@item.ID' }">delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>