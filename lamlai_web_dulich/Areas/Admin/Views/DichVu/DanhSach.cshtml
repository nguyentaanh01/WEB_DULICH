@model IEnumerable<lamlai_web_dulich.Models.DichVu>

@{
    ViewBag.Title = "Danh Sách";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
}

<div class="row">
    <div class="col-md-12" style="padding-top:50px">
        <h2 style="color:blue;
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite; padding: 15px 20px ">
            DANH SÁCH DỊCH VỤ
        </h2>

        <p>
            <button type="button" class="btn btn-info">
                <a href="~/Admin/DichVu/ThemMoi">Thêm Mới</a>
            </button>

        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenDichVu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LinkSeo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoatDong)
                </th>
                <th>TOOL</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenDichVu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LinkSeo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td>
                        <img style="height:100px; width:100px" src="@item.HinhAnh" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoatDong)
                    </td>
                    <td>
                        <a href="~/Admin/DichVu/CapNhat?idDichVu=@item.ID">Update</a>|
                        <a href="#" style="color:red" onclick="if (confirm('ban co muon xoa khong') == true) { location.href = '/Admin/DichVu/Xoa?idDichVu=@item.ID' }">delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


